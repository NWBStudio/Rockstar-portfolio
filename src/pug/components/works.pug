section.works
    .container.works__inner
        h2.works__title.section-title.section-title--dark Мои работы
        .works__content
            .works__left
              .slider
                +image("content/preview1.jpg", "slider__fillpic")
                .slider__preview
                  ul.previews
                    - for (var i = 1; i < 5; i++)
                        if i == 1
                            li.previews__item.previews__item--active
                              +image("content/preview" + `${i}` + ".jpg", "previews__pic")
                        else
                            li.previews__item
                              +image("content/preview" + `${i}` + ".jpg", "previews__pic")      
                .slider__buttons
                    button.slider__buttons-item.slider__buttons-item--slide--next(type="button")
                        +icon('arrow', 'slider__buttons-icon')
                    button.slider__buttons-item.slider__buttons-item--slide--prev(type="button")
                        +icon('arrow', 'slider__buttons-icon')
                .slider__counter 1 
            .works__right
              .works__tags
                - var tags = ['HTML', 'CSS', 'Javascript']
                ul.tags
                    each tag in tags
                        li.tags__item #{tag}
              .works__info
                h3.works__info-title Сайт школы
                .works__info-text
                  p Lorem ipsum dolor sit amet consectetur, adipisicing elit. Totam dolorum nulla placeat cumque nostrum commodi ad numquam dolores distinctio officiis molestiae, assumenda omnis ut voluptas itaque eligendi mollitia earum. Tenetur.
                a.iconed-link
                  .iconed-link__icon
                  .iconed-link__text                                                    