.arrow-button{
    padding: 0;
    width: 12px;
    height: 12;
    &--slide--left {
        transform: rotate(180deg);
    }
}

.arrow-button__icon {
    display: block;
    width: 12px;
    height: 12px;
}

.arrow-button--color--greyish{
    .arrow-button__icon {
        fill: $greyish;
    }
}

.arrow-button--color--white{
    .arrow-button__icon {
        fill: $white;
    }
}